package pack;

import java.util.Scanner;

public class classs {

	static Scanner reader = new Scanner(System.in);
	public static void main(String[] ags) {
		
		
		int question1, question2, question3;
		int point=0;
		
		System.out.println("hi, what's your name ?");
		String name=reader.nextLine();
		
		
		
		//question1
		System.out.println("who's the owner of microsoft ?");
		System.out.println("      1)Steve jobs");
		System.out.println("      2_Bill gates");
		System.out.println("      3)Mark zuckerburg");
        question1=reader.nextInt();
    	if(question1 == 2) {
			System.out.println("well done!");                  //Checking question one answer.
			point++;
			}
			else
				System.out.println("Sorry, it's Bill gates!");
			
         
        //question2	  
		System.out.println("who's the best player in the world 2015 ?");
		System.out.println("       1)Lionel messi");
		System.out.println("       2)Cristiano ronaldo");
		System.out.println("       3)Neymar jr");
        question2=reader.nextInt();
    	if(question2 == 1) {
			System.out.println("well done!");                  //Checking question one answer.
			point++;
			}
			else
				System.out.println("Sorry, it is Lionel messi!");
			
        
        //question3
    	System.out.println("how many musulm in the world ?");
        System.out.println("        1)1billion people");
        System.out.println("        2)2billion people");
        System.out.println("        3)1.5billion people");
        question3=reader.nextInt();
    	if(question3 == 1) {
			System.out.println("well done!");                  //Checking question one answer.
			point++;
			}
			else
				System.out.println("Sorry, it's 1billion people!");
			
        
    	
		
		System.out.println("\n\n" + name + ", you got " + point + " out of 3 correct.");
		
		if(point == 3)
			System.out.println("Great!");
		else if(point == 2)
			System.out.println("Good!");
		else if(point == 1)
			System.out.println("weak!");
		else
			System.out.println("Sorry, you have to learn more!"); 
		
		
		System.out.println("Thanks for playing...");
		
		
        
        
	}
	}
